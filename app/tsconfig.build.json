{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "outDir": "./build",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "**/__test__/**/*.ts"]
}
